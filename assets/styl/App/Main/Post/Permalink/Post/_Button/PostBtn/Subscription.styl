.permalink
  .container_postbtn
    .btn_subscription
      Button($BUTTON_SIZE, $BUTTON_SIZE, 5px, var(--h-button-color-background), var(--h-button-color))
      margin-right 0 !important
      &::before
        FontAwesome('\f005')
        font-weight 600
        font-size $BUTTON_FONT-SIZE
        color var(--h-button-color-hover-background)
      &:hover
        background-color var(--h-button-color-hover-background)
        &::before
          color var(--h-button-color-hover)
      > *
        display none !important
