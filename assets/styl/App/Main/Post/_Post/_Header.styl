.permalink
  > .header
    text-align center
    .img
      display none
    .heading
      .category
        color var(--h-color-blur)
        font-weight 500
        font-size .96rem
      .title
        color var(--h-color)
        margin-top 0
        margin-bottom 5px
        font-size 1.7rem
        line-height 1.5em
      .metainfo
        color var(--h-color-blur)
        font-size .9rem
        span
          display inline-block
          padding 0 3px
    @media screen and (max-width: 1200px)
      .title
        font-size 1.7rem
