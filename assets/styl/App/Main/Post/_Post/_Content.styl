.permalink
  > .content
    position relative
    .contents_style
      text-align left
      margin-top 50px
      position relative
      z-index 1
      div[data-ke-type=moreLess], >
        p
        blockquote[data-ke-style=style2],
        blockquote[data-ke-style=style3]
        ol, ul, table
          color var(--h-color)
          b, strong
            font-weight 600
          a
            color var(--h-color-theme)
            font-weight 500
          code
            position relative
            top -1px
            padding 2px 8px
            border-radius 5px
            white-space normal
            background-color var(--h-color-background-level-2)
            color var(--h-color)
        div[data-ke-type=moreLess],
        ul, ol, table, h2, h3, h4
          margin 20px 0
          > a
            text-decoration none !important
        h2, h3, h4
          &, a
            color var(--h-color)
        blockquote[data-ke-style=style2],
        blockquote[data-ke-style=style3],
        ul li, table td, table th,
        h2, h3, h4, p, span
          line-height 1.8em
        figure
          margin-top 20px !important
          margin-bottom 20px !important
          figcaption
            color var(--h-color-blurrier)
            font-size .9rem
            &:empty
              all unset
          img
            border-radius 5px
            background-color white
          &[data-ke-type=opengraph]
            margin-top 10px !important
            *
              color var(--h-color) !important
          &.imageslideblock
            .image-container
              width inherit !important
              height inherit !important
              overflow unset
        div[data-ke-type=moreLess]
          position relative
          &::before
            border-bottom 1px dashed var(--h-color-blurrier)
            z-index -1
            content ''
            position absolute
            top 15px
            left 0
            height 0
            width 100%
          .moreless-content
            margin-top 25px
          > .btn-toggle-moreless
            background-color var(--h-button-color-hover-background)
            color var(--h-button-color-hover) !important
            display inline-block
            border-radius 16px
            padding 2px 14px
            font-size .85rem !important
            font-weight 600
            &::before
              color var(--h-button-color-hover)
              FontAwesome('\f0a9')
              margin-right 5px
          &.open
            > .btn-toggle-moreless::before
                content '\f0ab'
        blockquote
          font-style initial
          margin 20px 0 !important
          color var(--h-color) !important
          &[data-ke-style=style1]
            padding 28px 0 0 0 !important
            p
              color var(--h-color)
          &[data-ke-style=style2]
            border solid var(--h-color-blurrier)
            border-width 0 0 0 2px
            padding 1px 0 0 12px
            color var(--h-color-blurrier)
            text-align left
            font-size .9rem
          &[data-ke-style=style3]
            background-color var(--h-color-background-level-2) !important
            font-size 1rem
            border none !important
            line-height 1.8em !important
            color var(--h-color-blurrier) !important
        ul, ol
          padding-left 35px
          margin 14px auto 24px
          li
            margin 6px 0
            ul, ol
              padding-left 35px
        table
          border none
          border-bottom 1px solid var(--h-color-blurriest)
          td, th
            border none
            border-bottom 1px solid var(--h-color-blurriest)
            font-size .9rem
            padding 16px 12px
            box-sizing border-box
            color var(--h-color)
        h2
          font-size 1.5rem
        h3
          font-size 1.3rem
        h4
          font-size 1.1rem
        pre
          border none
          border-radius 0 !important
          padding 0
          background none !important
          code
            background-color var(--h-color-background-level-2) !important
            padding 15px
            font-family 'OTWelcomeRA'
            line-height 1.8rem
      @media screen and (max-width: 1200px)
        margin-top 25px
        div[data-ke-type=moreLess], >
          h2
            font-size 1.3rem
          h3
            font-size 1.2rem
          h4
            font-size 1rem
          figure.imageblock.alignCenter,
          figure.imagegridblock,
          figure.imageslideblock.alignCenter
            width 100% !important
            margin 20px 0 20px 0 !important
          blockquote[data-ke-style=style1]::before
            font-size .85rem

.permalink
  .content
    >*
      line-height 1.8rem

/*Post Content Theme Custom*/
html[data-theme='light']
  .permalink
    .content
      h2
        border 1px solid #d4d4d4
        border-left-color royalblue
        display inline-block
        padding 9px 40px 0px 15px
        border-left-width 23px
        background-size 10px, 30px, 10px 10px, 30px 30px
        background-image linear-gradient(90deg, #f2f2f2 1px, transparent 1px), linear-gradient(90deg, #f2f2f2 1px, transparent 1px), linear-gradient(#f2f2f2 1px, transparent 1px), linear-gradient(#f2f2f2 1px, transparent 1px)
        font-weight bold !important
      h3
        border-bottom 3px solid #d4d4d4
        border-right 3px solid #d4d4d4
        border-top 1px solid #d4d4d4
        border-left 1px solid #d4d4d4
        display inline-block
        padding 9px 20px 0px
        font-weight bold !important
      h4
        display inline-block
        padding 0px 10px
        background linear-gradient(110deg, #9c47fc, #FF00FF) no-repeat
        background-size 100% 6%
        background-position bottom
        font-weight bold !important
      div[class='my-def-bigbox']
        line-height 1.7em
        border 2px dashed #c1c1c1
        border-radius 10px
        padding 23px 20px 15px 20px
      div[class='my-def-box']
        border 1px solid #e5e5e5
        display inline-block
        padding 15px 20px 10px 20px
        border-radius 5px
      div[class='my-def-importantbox']
        line-height 1.7rem
        background #F0F5FF
        padding 20px
        border-radius 10px